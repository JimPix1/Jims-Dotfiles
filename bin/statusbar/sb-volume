#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1; pkill -RTMIN+6 dwmblocks ;;
	5) pamixer --allow-boost -d 1; pkill -RTMIN+6 dwmblocks ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, or ðŸ”‡ if muted
- Middle click to mute
- Scroll to change" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
	7) setsid -f "$TERMINAL" -e alsamixer ;;
esac

$(pamixer --get-mute) = true && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "99" ]; then
	icon="ðŸ“¢"
elif [ "$vol" -gt "69" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "29" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon$vol%"
