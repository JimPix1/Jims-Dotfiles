#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
	2) setsid -f st -e gotop ;;
	3) notify-send "ðŸ–¥ CPU module " "\-Shows CPU Used/Tota.
- Click to show intensive processes.
- Middle click to open htop." ;;
	6) st -e nvim "$0" ;;
esac

echo "$(grep 'cpu ' /proc/stat | awk '{cpu_usage=($2+$4)*100/($2+$4+$5)} END {printf "%0.2f%", cpu_usage}')"
